
<config>
<!-- Engine Turbo -->
<append xpath="/item_modifiers">
	<item_modifier name="modEngineTurbo1" installable_tags="motorTools1" modifier_tags="speed" type="attachment" rarity="0.5">
		<property name="CustomIcon" value="smallEngine"/>
		<property name="Stacknumber" value="1"/>
		<effect_group tiered="false">
			<passive_effect name="RoundsPerMinute" operation="perc_add" value=".4"/>
		</effect_group>
		<property name="PickupJournalEntry" value="augmentGunsTip"/>
	</item_modifier>

<!-- Gas Tank -->	
	<item_modifier name="modGasTank1" installable_tags="gasTank1" modifier_tags="magazine" type="attachment" rarity="0.5">
		<property name="CustomIcon" value="ammoGasCan"/>
		<property name="Stacknumber" value="1"/>
		<effect_group tiered="false">
			<passive_effect name="MagazineSize" operation="perc_add" value=".5"/>
		</effect_group>
		<property name="PickupJournalEntry" value="augmentGunsTip"/>
	</item_modifier>
	
<!-- BARREL EXTENDER -->
	<item_modifier name="modMotorToolExtension1" installable_tags="motorToolReach" modifier_tags="shaft" type="attachment" rarity="0.5">
		<property name="CustomIcon" value="partsAuger_blade"/>
		<property name="Stacknumber" value="1"/>
		<effect_group tiered="false">
			<passive_effect name="MaxRange" operation="perc_add" value=".5"/>
			<passive_effect name="BlockRange" operation="perc_add" value=".5"/>
		</effect_group>
		<property name="PickupJournalEntry" value="augmentGunsTip"/>
	</item_modifier>
	

			
